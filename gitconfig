[user]
  name = Luiz Rocha
[color]
  branch = auto
  status = auto
  diff = auto
  pager = true
[core]
  excludesfile = ~/.gitignore
[push]
  default = current
[alias]
  ci = commit
  co = checkout
  b = branch -a
  st = status
  w = whatchanged
  sth = stash
  los = log --stat
  lop = log -p
  llog = log --pretty='format:%Cgreen%h %Cred%ar %Creset-- %s (%an)' --max-count=20
  slog = shortlog -n
  stats = shortlog -s -n --no-merges
  tags = tag -l -n30
  last = cat-file commit HEAD
  count = !git log --author='Luiz Rocha' --oneline --no-merges | wc -l | awk '{print $1}'
  standup = shortlog --since=yesterday
  uncommit = reset --soft HEAD^
[log]
  date = rfc
[url "git@github.com:lsdr/"]
  insteadOf = github:

